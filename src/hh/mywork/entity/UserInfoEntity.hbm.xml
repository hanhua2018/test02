<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="hh.mywork.entity.UserInfoEntity" table="user_info" schema="mywork">
        <id name="uuid">
            <column name="uuid" sql-type="varchar(50)" length="50"/>
        </id>
        <property name="userName">
            <column name="userName" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="pwd">
            <column name="pwd" sql-type="varchar(100)" length="100"/>
        </property>
    </class>
</hibernate-mapping>